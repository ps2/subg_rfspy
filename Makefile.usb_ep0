SERIAL_TYPE := usb_ep0
SERIAL_PARAMS := -DUSES_USB

BOARD_TYPE := TI_DONGLE
BOARD_PARAMS := -DTI_DONGLE

TARGET_DEVICE := CC1111


SRC = \
  hal.c \
  usb.c \
  usb_descriptors.c

ADB=$(SRC:.c=.adb)
ASM=$(SRC:.c=.asm)
LNK=$(SRC:.c=.lnk)
LST=$(SRC:.c=.lst)
REL=$(SRC:.c=.rel)
RST=$(SRC:.c=.rst)
SYM=$(SRC:.c=.sym)

PCDB=$(PROGS:.hex=.cdb)
PLNK=$(PROGS:.hex=.lnk)
PMAP=$(PROGS:.hex=.map)
PMEM=$(PROGS:.hex=.mem)
PAOM=$(PROGS:.hex=)
include common.mk

hal.rel: ${SERIAL_TYPE}/hal.c
	$(CC) $(CFLAGS) -o output/${TARGET_BUILD}/$@ -c $<

usb_descriptors.rel: ${SERIAL_TYPE}/usb_descriptors.c
	$(CC) $(CFLAGS) -o output/${TARGET_BUILD}/$@ -c $<
usb.rel: ${SERIAL_TYPE}/usb.c
	$(CC) $(CFLAGS) -o output/${TARGET_BUILD}/$@ -c $<

